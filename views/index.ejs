<body>
  <div class="logos">
    <img src="https://www.static-src.com/wcsstore/Indraprastha/images/brandlogo//BRD-21150/spotify-logo.png" alt="Song 1" />
    <h1 class="logos-title">My Spotify</h1>
  </div>

  <div class="container">
    <div class="section">
      <div class="title">
        <h2 class="section-title">Playlist Songs</h2>
        <a href="/form" class="add-song-button">
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
      <ul class="song-list">
        <% playlist.forEach(song => { %>
        <li>
          <a href=<%= song.url %>>
            <img src="https://icons-for-free.com/iconfiles/png/512/music+songs+icon-1320192022282015848.png" alt=<%= song.title %> />
          </a>
          <div class="detail">
            <p class="song-title"><%= song.title %></p>
            <p class="artist"><%= song.artist %></p>
          </div>

        </li>
        <% }) %>

      </ul>
    </div>

    <div class="section">
      <div class="title">
        <h2 class="section-title">Most played Songs</h2>
      </div>
      <ul class="song-list">
        <% popular.forEach(lagu => { %>
        <li>
          <a href=<%= lagu.url %>>
            <img src="https://icons-for-free.com/iconfiles/png/512/music+songs+icon-1320192022282015848.png" alt=<%= lagu.title %> />
          </a>
          <div class="detail">
            <p class="song-title"><%= lagu.title %></p>
            <p class="artist"><%= lagu.artist %></p>
          </div>

        </li>
        <% }) %>

      </ul>
    </div>

